<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".5"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_vertical_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".8"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".10"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stitch chat"
        android:textSize="25sp"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_center"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_center"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_10"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_30"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".35"/>
    <EditText
        android:id="@+id/username_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="username"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_20"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_80"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_30"/>
    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_50"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".45"/>
    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="login"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_20"
        app:layout_constraintStart_toEndOf="@id/guideline_vertical_80"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_50"/>
    <!--<EditText-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:hint="password"-->
        <!--app:layout_constraintEnd_toStartOf="@id/guideline_vertical_20"-->
        <!--app:layout_constraintStart_toEndOf="@id/guideline_vertical_80"-->
        <!--app:layout_constraintTop_toBottomOf="@id/guideline_horizontal_50"/>-->
    <android.support.constraint.Guideline
        android:id="@+id/guideline_horizontal_70"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".70"/>

</android.support.constraint.ConstraintLayout>